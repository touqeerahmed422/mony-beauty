{% component %}
{
  "name": "Banner Hero",
  "fields": [
    {
      "id": "tagline",
      "label": "Small Text",
      "type": "text",
      "default": "ALL YOU NEED IS LESS."
    },
    {
      "id": "heading",
      "label": "Heading (HTML allowed)",
      "type": "textarea",
      "default": "Where<br><span class='highlight'>Confidence</span><br>Meets Color"
    },
    {
      "id": "button_text",
      "label": "Button Text",
      "type": "text",
      "default": "Shop Now"
    },
    {
      "id": "button_link",
      "label": "Button Link",
      "type": "url"
    },
    {
      "id": "hero_image",
      "label": "Right Side Image",
      "type": "image"
    }
  ]
}
{% endcomponent %}

<section class="hero-banner">

  <div class="hero-left">

    {% if tagline %}
    <div class="tagline">{{ tagline }}</div>
    {% endif %}

    <h1 class="hero-title">
      {{ heading | raw }}
    </h1>

    {% if button_text %}
    <a href="{{ button_link }}" class="hero-btn">
      {{ button_text }}
    </a>
    {% endif %}

  </div>

  <div class="hero-right">
    {% if hero_image %}
    <img src="{{ hero_image }}" alt="Hero">
    {% endif %}
  </div>

</section>

<style>
.hero-banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 80px 40px;
}

.hero-left {
  max-width: 50%;
}

.tagline {
  font-size: 14px;
  color: #ddd;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.hero-title {
  font-size: 64px;
  font-weight: 700;
  line-height: 1.1;
  margin-bottom: 30px;
  color: #ffffff;
}

.hero-title .highlight {
  background: linear-gradient(90deg, #ffa2a2, #8abaff, #e3baff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hero-btn {
  display: inline-block;
  padding: 14px 32px;
  background: #ff4d85;
  border-radius: 40px;
  color: #fff;
  font-size: 18px;
  text-decoration: none;
}

.hero-right img {
  width: 480px;
  border-radius: 14px;
}

@media(max-width: 768px){
  .hero-banner{
    flex-direction: column;
    text-align: center;
  }
  .hero-left{
    max-width: 100%;
  }
  .hero-title{
    font-size: 40px;
  }
  .hero-right img{
    width: 100%;
    margin-top: 30px;
  }
}
</style>
